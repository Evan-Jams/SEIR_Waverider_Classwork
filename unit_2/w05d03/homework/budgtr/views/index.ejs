<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/normalize.css">
        <link rel="stylesheet" href="/skeleton.css">
        <title>Budget App</title>
    </head>
    <body>
        <div class="container">
            <h1>Budgtr</h1>
            <table class="u-full-width">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>

                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% budgets.forEach((budgets, index)=>{ %>
                        <tr>
                            <th><%= budgets.date %></th>
                            <th><a href="/budgtr/<%=index%>"><%= budgets.name %></a></th>

                            <th><%= budgets.amount %></th>
                        </tr>
                    <%})%>
                </tbody>
            </table>
        </div>

    </body>
</html>
